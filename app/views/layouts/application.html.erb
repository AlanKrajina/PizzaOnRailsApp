<!DOCTYPE html>
<html>
  <head>
    <title>PizzaOnRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    body {
      background-image: url("/pizza.jpg");
      background-repeat: no-repeat;
      background-size: cover;

      font-family: "Times New Roman", Palatino, serif;
      
    }
  </style>
  </head>

  <body>
  <ul>

  <% if current_user %>
  <li><%= link_to "Homepage", root_url , class: "a-secondary"%></li>

  <li>
    <a class= "a-secondary" href="<%= user_path(current_user) %>"><%= current_user.name %>'s profile</a>
  </li>

  <li><%= link_to 'All Pizzas by all Users', pizzas_path , class: "a-secondary"%></li>



  <li><%= link_to "Log Out", signout_path, method: :delete , class: "a-secondary"%></li>


<% else %>


    <h4><%= link_to "Sign Up", new_user_path, class: "a-primary"%></h4>
    <h4><%= link_to "Log In", signin_path, class: "a-primary"%></h4>

<% end %>



</ul>






  <div>
  <%= yield %>
  </div>

  </body>
</html>