<div class= "a-six" >

<% if @pizza.user == current_user %>

<%= render 'show' %>

<% else %>
<div>
  <p class= "a-name1"><em><%= @pizza.name %><em></p>
</div>
  <h2 class= "a-show" >All Ingredients: </h2>
<ul>
  <% @pizza.meats.each do |meat| %>
      <li class= "a-show"><%= meat.name %></li>
  <% end %>
</ul>
  
<ul>
  <% @pizza.cheeses.each do |cheese| %>
      <li class= "a-show"><%= cheese.name %></li>
  <% end %>
</ul>
  
<ul>
  <% @pizza.toppings.each do |topping| %>
      <li class= "a-show"><%= topping.name %></li>
  <% end %>
</ul>
  
<ul>
  <% @pizza.dips.each do |dip| %>
      <li class= "a-show"><%= dip.name %></li>
  <% end %>
</ul>
    <h4 class= "a-forth" >Pizza stars: *<%= @pizza.rating.stars %></h4>
    <h4 class= "a-forth" >Pizza comment: <%= @pizza.rating.comment %></h4>
  <% end %>
</div>
