    
<div>
  <p><%= @pizza.name %></p>
  <p><%= @pizza.delivery_address %></p>
  <p><%= @pizza.delivery_notes %></p>
</div>

<ul>
<% @pizza.meats.each do |meat| %>
    <li><%= meat.name %></li>
<% end %>
</ul>

<ul>
<% @pizza.cheeses.each do |cheese| %>
    <li><%= cheese.name %></li>
<% end %>
</ul>

<ul>
<% @pizza.toppings.each do |topping| %>
    <li><%= topping.name %></li>
<% end %>
</ul>

<ul>
<% @pizza.dips.each do |dip| %>
    <li><%= dip.name %></li>
<% end %>
</ul>

    <h3>Pizza stars: *<%= @pizza.rating.stars %></h3>
    <h3>Pizza comment: <%= @pizza.rating.comment %></h3>



