<% if @pizza.user == current_user %>

<div>
<h1><em><font color="white"><%= @pizza.name %></font><em></h1>
  <p class= "a-secondary" ><%= @pizza.delivery_address %></p>
  <p class= "a-secondary" ><%= @pizza.delivery_notes %></p>
</div>

<ul>
<% @pizza.meats.each do |meat| %>
    <li class= "a-primary" ><%= meat.name %></li>
<% end %>
</ul>

<ul>
<% @pizza.cheeses.each do |cheese| %>
    <li class= "a-primary" ><%= cheese.name %></li>
<% end %>
</ul>

<ul>
<% @pizza.toppings.each do |topping| %>
    <li class= "a-primary" ><%= topping.name %></li>
<% end %>
</ul>

<ul>
<% @pizza.dips.each do |dip| %>
    <li class= "a-primary" ><%= dip.name %></li>
<% end %>
</ul>

    <h4 class= "a-forth" >Pizza stars: *<%= @pizza.rating.stars %></h4>
    <h4 class= "a-forth" >Pizza comment: <%= @pizza.rating.comment %></h4>


    <h3 class= "a-secondary" ><%= link_to "Edit Pizza", edit_pizza_path(@pizza)%></h3>
    <h3 class= "a-secondary" ><%= link_to "Delete Pizza", pizza_path(@pizza), method: :delete%></h3>



<% else %>
    <div>
    <h4><%= @pizza.name %></h4>
  </div>
  
  <ul>
  <% @pizza.meats.each do |meat| %>
      <li><%= meat.name %></li>
  <% end %>
  </ul>
  
  <ul>
  <% @pizza.cheeses.each do |cheese| %>
      <li><%= cheese.name %></li>
  <% end %>
  </ul>
  
  <ul>
  <% @pizza.toppings.each do |topping| %>
      <li><%= topping.name %></li>
  <% end %>
  </ul>
  
  <ul>
  <% @pizza.dips.each do |dip| %>
      <li><%= dip.name %></li>
  <% end %>
  </ul>
  
      <h2>Pizza stars: *<%= @pizza.rating.stars %></h2>
      <h2>Pizza comment: <%= @pizza.rating.comment %></h2>

  <% end %>
