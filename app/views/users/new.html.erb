<h1><em><font color="white">Sign Up</font><em></h1>
<%= form_for @user do |f| %>
  <%= f.label :name , class: "a-primary"%>
  <%= f.text_field :name %><br />

  <%= f.label :email , class: "a-primary"%>
  <%= f.text_field :email %><br />
  
  <%= f.label :password , class: "a-primary"%>
  <%= f.password_field :password  %><br />
  </br>
  <%= f.submit %>
<% end %>